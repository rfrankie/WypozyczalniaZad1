@model WypozyczalniaNarty.Models.Klienci
@{
    Layout = null;
}

<style>
    #box {
        border: 1px solid black;
        height: 100%;
    }

    #main-div {
        height: 900px;
        background-image: url('../../Content/img/loginback.jpg');
        background-size: 100% 900px;
    }

    .insidebox {
        border: 1px solid black;
        margin: 10% auto 10% auto;
        max-width: 500px;
        min-width: 200px;
        padding-left: 60px;
        padding-right: 60px;
        border-radius: 10px;
        background-color: whitesmoke;
    }

    div h1 {
        text-align: center;
    }

    p#para {
        text-align: center;
        font-size: 14px;
    }
</style>

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<script src="js/bootstrap.min.js"></script>
<script src="http://code.jquery.com/jquery.js"></script>
<div id="main-div">
    <div id="box" class="img-responsive">
        @using (Html.BeginForm("SignUp",
                        "User",
                        FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
        {
        <div class="insidebox">
            <div> <h1>Zarejestruj sie</h1></div>


            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                    @Html.TextBoxFor(x => x.KlientImie, new { @class = "form-control", @placeholder = "Imie" })

                </div>
                <span style="color:red">   @Html.ValidationMessageFor(x => x.KlientImie) </span>

            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                    @Html.TextBoxFor(x => x.KlientNazwisko, new { @class = "form-control", @placeholder = "Nazwisko" })

                </div>
                <span style="color:red">   @Html.ValidationMessageFor(x => x.KlientNazwisko) </span>

            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                    @Html.TextBoxFor(x => x.KlientPesel, new { @class = "form-control", @placeholder = "Pesel" })

                </div>
                <span style="color:red">   @Html.ValidationMessageFor(x => x.KlientPesel) </span>

            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                   @Html.TextBoxFor(x => x.KlientMail, new { @class = "form-control", @placeholder = "Email" })

                </div>
                <span style="color:red">   @Html.ValidationMessageFor(x => x.KlientMail) </span>

            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                    @Html.PasswordFor(x => x.KlientPassword, new { @class = "form-control", @placeholder = "Hasło" })

                </div>
                <span style="color:red">   @Html.ValidationMessageFor(x => x.KlientPassword) </span>

            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                    @Html.TextBoxFor(x => x.KlientTel, new { @class = "form-control", @placeholder = "Telefon" })

                </div>
                <span style="color:red">   @Html.ValidationMessageFor(x => x.KlientTel) </span>
            </div>
            
            <div class="form-group">

                <input type="submit" value="Zarejestruj" class="btn btn-success btn-block" />

            </div>

            <div class="form-group">
                <p style="color:red">@ViewBag.error</p>
            </div>



        </div>

        }
    </div>

</div>


<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
